<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/islam"
        tools:context=".ZikirActivity">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content">


            <Button
                android:id="@+id/btn"
                android:layout_width="271dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="10dp"
                android:padding="20dp"
                android:text="Say Subahan Allah"
                android:textAllCaps="false"
                android:background="#fff"
                android:textColor="#000"
                android:textSize="16dp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/write"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="#fff"
                android:text="0"
                android:layout_marginTop="8dp"


                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content">


            <Button
                android:id="@+id/btna"
                android:layout_width="271dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:background="#fff"
                android:textColor="#000"
                android:padding="20dp"
                android:text="Say Alhamdulillah"
                android:textAllCaps="false"

                android:textSize="16dp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/writea"
                android:layout_width="wrap_content"
                android:text="0"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="#fff"
                android:layout_marginTop="0dp"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="351dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnc"
                android:layout_width="271dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"

                android:padding="20dp"
                android:text="Say Allahu Akbar"
                android:textAllCaps="false"
                android:background="#fff"
                android:textColor="#000"
                android:textSize="16dp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/writeb"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="#fff"
                android:layout_marginTop="0dp"

                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="352dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnd"
                android:layout_width="271dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:padding="20dp"
                android:text="Say La Ilaha IllAllah"
                android:textAllCaps="false"
                android:background="#fff"
                android:textColor="#000"
                android:textSize="16dp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/writec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="0"
                android:textColor="#fff"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnb"
                android:layout_width="267dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="#fff"
                android:text="Reset"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="16dp"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/btne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="exit"
                android:layout_marginLeft="10dp"
                android:background="#fff"
                android:textColor="#000"
                android:textStyle="bold"
                />

        </LinearLayout>

        <Button
            android:id="@+id/save"
            android:layout_width="385dp"
            android:layout_height="wrap_content"
            android:text="Save and see"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="30dp"
            android:background="#fff"
            android:textColor="#000"
            android:textStyle="bold"
            />



        <!--<ImageButton-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!---->

        <!--/>-->



    </LinearLayout>
